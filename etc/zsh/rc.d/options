setopt ALWAYS_LAST_PROMPT
setopt AUTO_PARAM_KEYS


########
# 補完 #
########

# 補完候補のリストを自動的に表示する
setopt AUTO_LIST

# 自動的にメニュー補完(menu completion)を有効にする
setopt AUTO_MENU

# 単語の途中からでも補完できるようにする
setopt COMPLETE_IN_WORD

# 補完リストを表示するときにファイルタイプも表示する
setopt LIST_TYPES

# 補完する時に表示が化けないようにする
setopt print_eight_bit

##################
# ファイル名生成 #
##################

# 拡張されたファイル生成機能を有効にする
setopt EXTENDED_GLOB

# 数字の大きさに従ってファイル名をソートする
setopt NUMERIC_GLOB_SORT


################
# ディレクトリ #
################

# cd コマンドなしでも移動できるようにする
setopt AUTO_CD

# cd するときに自動的に pushd する
setopt AUTO_PUSHD

# 重複したディレクトリを pushd しない
setopt PUSHD_IGNORE_DUPS

# + と - の意味を入れ換える
setopt PUSHD_MINUS

# pushd したときにディレクトリスタックのリストを表示しない
setopt PUSHD_SILENT

# 引数なし pushd は ~ を登録する
setopt PUSHD_TO_HOME


#########################
# コマンド/プロセス置換 #
#########################

# = によるコマンドパス置換を有効にする
setopt EQUALS


##############
# エイリアス #
##############


############
# ヒストリ #
############

# ヒストリファイルにヒストリを上書きせずに追加する
setopt APPEND_HISTORY

# 拡張された形式でヒストリを保存しない
unsetopt EXTENDED_HISTORY

# ヒストリに重複があった場合古い方を削除する
setopt HIST_EXPIRE_DUPS_FIRST

# ヒストリの検索で同じ行は表示しない
setopt HIST_FIND_NO_DUPS

# ヒストリに重複したコマンドがある場合は古い方を削除する
setopt HIST_IGNORE_ALL_DUPS

# 直前のコマンドが同じならヒストリに登録しない
setopt HIST_IGNORE_DUPS

# スペースで始まる場合はヒストリに登録しない
setopt HIST_IGNORE_SPACE

# 関数定義はヒストリに登録しない
setopt HIST_NO_FUNCTIONS

# ヒストリ関係のコマンドは登録しない
setopt HIST_NO_STORE

# コマンドラインの余計なスペースを削除
setopt HIST_REDUCE_BLANKS

# ヒストリファイルにセーブする時に重複したコマンドを削除
setopt HIST_SAVE_NO_DUPS

# コマンド入力が終る度にヒストリファイルに追加する
setopt INC_APPEND_HISTORY

# 複数端末でヒストリを共有する
setopt SHARE_HISTORY


##############
# プロンプト #
##############

# プロンプト内でコマンド置換や計算などの機能を有効にする
setopt PROMPT_SUBST

# プロンプトを表示するときに CR を発行しない
unsetopt PROMPT_CR


##########
# その他 #
##########

# '/' を自動的に削除する
setopt AUTO_REMOVE_SLASH

# リダイレクトの処理を厳しくする
unsetopt CLOBBER

# コマンドラインの修正を行わない
unsetopt CORRECT
unsetopt CORRECT_ALL

# C-d でログアウトしない
setopt IGNORE_EOF

# 行末にある不必要な "'" は無視する
setopt SUN_KEYBOARD_HACK
